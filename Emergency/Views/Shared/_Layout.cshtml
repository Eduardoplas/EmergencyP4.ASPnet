<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmergencyP4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Emergency.styles.css" asp-append-version="true" />
</head>
<style>
  
    
    header {
        background-color: #0074D9; /* Color de fondo azul */
        color: #FFFFFF; /* Color del texto blanco */
        padding: 20px; /* Espaciado interior para el contenido de la cabecera */

    }
</style>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu Página con Encabezado Colorido</title>
    <style>
        /* Estilos CSS para el título */
        h1 {
            color: #0074D9; /* Cambiar el color del texto del encabezado */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmergencyP4</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Enfermedades</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Home/Ansiedad">Ansiedad</a></li>
                                <li><a class="dropdown-item" href="/Home/Diabetes">Diabetes</a></li>
                                <li><a class="dropdown-item" href="/Home/Colicos">Colicos</a></li>
                                <li><a class="dropdown-item" href="/Home/Depresion">Depresion</a></li>
                                <li><a class="dropdown-item" href="/Home/Estres">Estres</a></li>
                                <li><a class="dropdown-item" href="/Home/Alergias">Alergias</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">extras</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Mas">Doctor</a>
                        </li>
                    </ul>
                    <a class="btn" style="border: 2px solid #e74c3c; border-radius: 10px; color: black;" href="/Home/iniciar_sesion">Iniciar sesión</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EmergencyP4 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

